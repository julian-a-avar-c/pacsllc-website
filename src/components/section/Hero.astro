---
import Layout from "@/layouts/Layout.astro";

import config from "@/config/main";
import pageConfig from "@/config/pages/index";

import { Icon } from "astro-icon/components";
import Header from "@/components/layout/Header.astro";
import { HeroNavBreadcrumbs } from "@/components/section/HeroNavBreadcrumbs";
import { Button } from "@/components/ui/button";
import {
  Card,
  CardContent,
  CardDescription,
  CardFooter,
  CardHeader,
  CardTitle,
} from "@/components/ui/card";
import type { ReactNode } from "node_modules/react-resizable-panels/dist/declarations/src/vendor/react";

type Props = {
  title: string;
  nav: { href?: string; node: ReactNode }[];
  class?: string;
};
const { title, nav, class: className } = Astro.props;
---

<section
  class:list={[
    "col-[fullbleed]",
    "grid grid-cols-subgrid lg:gap-8",
    "bg-[url(/images/IMG_2252.JPEG)] bg-[50%_20%] sm:bg-[50%_10%] 2xl:bg-[50%_0%] bg-fixed",
    className,
  ]}
>
  <div
    class:list={[
      "col-[content]",
      "flex flex-col",
      "lg:gap-4 xl:gap-8",
      "py-8 sm:py-16 xl:py-24 2xl:py-32",
      "bg-background/10 backdrop-blur-sm",
      "items-center justify-items-center",
    ]}
  >
    <h1 class:list={["font-bold", "text-5xl sm:4xl md:text-5xl 2xl:text-6xl"]}>
      {title}
    </h1>

    <HeroNavBreadcrumbs
      itemKey={title.split(" ").join("-")}
      items={nav}
      className="text-xl"
      client:only="react"
    />
  </div>
</section>
